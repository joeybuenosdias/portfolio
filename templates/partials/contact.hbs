<section class="contact-section">
    <h2 class="carousel-title">Contact Me</h2>
    <form action="/contact" id="contact-form" method="post" role="form">
            <div id="name-section" class="form-section">
                <label for="name">Name</label>
                <input
                    id="name"
                    name="name"
                    type="text"
                    placeholder="Your name"
                    required
                />
            </div>

            <div id="email-section" class="form-section">
                <label for="email">Email</label>
                <input
                    id="email"
                    name="email"
                    type="text"
                    placeholder="Your email"
                    required
                />
            </div>

            <div id="message-section" class="form-section">
                <label for="message">Message</label>
                <textarea
                    id="message"
                    name="message"
                    placeholder="Enter your message here"
                    rows="3"
                    required
                >
                </textarea>
            </div>

            <button id="submit-button" type="submit">Submit</button>
    </form>
</section>